<h1>Welcome to Your Dashboard</h1>

<!-- Your Spaces -->
<h2>Your Spaces</h2>
<% @spaces.each do |space| %>
  <div class="space-list">
    <h3><%= space.name %></h3>
    <p><%= space.description %></p>
    <p>Location: <%= space.location %></p>
    <%= link_to 'Edit', edit_space_path(space), class: "btn btn-secondary" %> |
    <%= link_to 'Delete', space_path(space), method: :delete, data: { confirm: 'Are you sure you want to delete this space?' }, class: "btn btn-danger" %>
  </div>
<% end %>

<!-- If no spaces are created by the user -->
<% if @spaces.empty? %>
  <p>You haven't added any spaces yet. <%= link_to 'Add a new space', new_space_path %></p>
<% end %>

<!-- Your Bookings -->
<h2>Your Bookings</h2>
<% @bookings.each do |booking| %>
  <div class="booking-details">
    <p>Booked for: <%= booking.space.name %></p>
    <p>Start Date: <%= booking.start_date %></p>
    <p>End Date: <%= booking.end_date %></p>
    <p>Status: <%= booking.status %></p>
    <%= link_to 'Accept', accept_booking_path(booking), method: :patch, class: "btn btn-success" %> |
    <%= link_to 'Decline', decline_booking_path(booking), method: :patch, class: "btn btn-danger" %>
  </div>
<% end %>

<!-- If no bookings exist for the user -->
<% if @bookings.empty? %>
  <p>You have no bookings at the moment.</p>
<% end %>
